extends ./includes/layout
block main
	// Simple header with scrollable tabs.
	.mdl-layout.mdl-js-layout.mdl-layout--fixed-header
		header.mdl-layout__header.mdl-color--blue
			.mdl-layout-icon
			.mdl-layout__header-row
				// Title
				span.mdl-layout-title Abstract Review
				// Tabs
			.mdl-layout__tab-bar.mdl-js-ripple-effect
				a.mdl-layout__tab.is-active(href='#scroll-tab-1') Introduction
				a.mdl-layout__tab(href='#scroll-tab-2') Guidelines
				a.mdl-layout__tab(href='#scroll-tab-3') Review Abstracts
				a.mdl-layout__tab(href='#scroll-tab-4') Report
				if(user.type=='admin')
					a.mdl-layout__tab(href='#scroll-tab-5') Upload pdf
					a.mdl-layout__tab(href='#scroll-tab-6') Add users
					a.mdl-layout__tab(href='#scroll-tab-7') Admin Report
		.mdl-layout__drawer
			span.mdl-layout-title Abstract Review
			nav.mdl-navigation
				a.mdl-navigation__link(href='/signout') Sign Out
				a.mdl-navigation__link(href='/changepassword') Change Password
				//- a.mdl-navigation__link(href='') Link
				//- a.mdl-navigation__link(href='') Link

		main.mdl-layout__content
			section#scroll-tab-1.mdl-layout__tab-panel.is-active
				.page-content
					// Your content goes here
					include introduction
			section#scroll-tab-2.mdl-layout__tab-panel
				.page-content
					// Your c
					include rules
			section#scroll-tab-3.mdl-layout__tab-panel
				.page-content
					// Your content goes here
					include reviewabstract
			section#scroll-tab-4.mdl-layout__tab-panel
				.page-content
					// Your content goes here
					include report
			if(user.type)=='admin'
				section#scroll-tab-5.mdl-layout__tab-panel
					.page-content
						// Your content goes here
						include uploadpdf
				section#scroll-tab-6.mdl-layout__tab-panel
					.page-content
						// Your content goes here
						include signup
				section#scroll-tab-7.mdl-layout__tab-panel
					.page-content
						// Your content goes here
						include adminreport
		.mdl-mini-footer.customfooter
				.mdl-mini-footer__left-section
					h5.mdl-color-text--white(style="padding-left: 5px; font-family: 'Monotype Corsiva'") Created By Aakash Dhongade
				.mdl-mini-footer__right-section
					h6 Please report any bugs / suggestions to dhongadeaakash@gmail.com
							
	