extends ./includes/layout
block main
	.mdl-layout.mdl-js-layout.mdl-layout--fixed-header
			header.mdl-layout__header
					.mdl-layout__header-row
						span.mdl-layout-title Abstract Review
				main.mdl-layout__content
					.mdl-grid
						.mdl-layout-spacer
						.mdl-cell.mdl-cell--4-col
							h4.mdl-color-text--black Change Password
							form(action='/changepassword' method='post')
								.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
									input#username.mdl-textfield__input(type='password' name='oldPassword')
									label.mdl-textfield__label(for='oldPassword') Old Password
								br
								.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
									input#username.mdl-textfield__input(type='Password',name="newPassword")
									label.mdl-textfield__label(for='newPassword') New Password
								.mdl-layout-spacer
								button#login.mdl-button.mdl-js-button.mdl-js-ripple-effect.mdl-button--raised.mdl-button--colored(type='submit')
									| Change
						.mdl-layout-spacer