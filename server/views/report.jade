style.
	.demo-list-two {
	width: 100%;
	}
.mdl-grid
	.mdl-cell.mdl-cell--6-col.mdl-cell--2-offset-desktop.mdl-cell--12-col-phone
		ul.demo-list-two.mdl-list
		
			each val in pdfs
				li.mdl-list__item.mdl-list__item--three-line
					.mdl-list__item-primary-content.width24.width50
						i.material-icons.mdl-list__item-avatar.mobileonly note
						div.wordwrapformobile #{val.title}
						//- .mdl-list__item-sub-title(style=" word-wrap: break-word;") #{val.desc}

					.mdl-list__item-secondary-content
						.mdl-list__item-secondary-info Not Seen
						a.mdl-list__item-secondary-action(href='#')
							i.material-icons.mdl-color-text--green done
					.mdl-list__item-secondary-content
						.mdl-list__item-secondary-info Ignored
						a.mdl-list__item-secondary-action(href='#')
							i.material-icons.mdl-color-text--red remove
					.mdl-list__item-secondary-content
						.mdl-list__item-secondary-info Reviewed
						a.mdl-list__item-secondary-action(href='#')
							i.material-icons.mdl-color-text--red remove
			each val in ignored
				li.mdl-list__item.mdl-list__item--three-line
					.mdl-list__item-primary-content.width24.width50
						i.material-icons.mdl-list__item-avatar.mobileonly note
						div.wordwrapformobile #{val.title}
						//- span.mdl-list__item-sub-title(style=" word-wrap: break-word;") #{val.desc}

					.mdl-list__item-secondary-content
