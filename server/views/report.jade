						a.mdl-list__item-secondary-action(href='#')
							i.material-icons.mdl-color-text--red remove
					.mdl-list__item-secondary-content
						.mdl-list__item-secondary-info Ignored
						a.mdl-list__item-secondary-action(href='/removeignored/'+val._id)
							i.material-icons.mdl-color-text--green done
					.mdl-list__item-secondary-content
						.mdl-list__item-secondary-info Reviewed
						a.mdl-list__item-secondary-action(href='#')
							i.material-icons.mdl-color-text--red remove
